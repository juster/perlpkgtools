#!/bin/sh
##
# Print a list of perl module packages.
#
# Args: repository dirs (one level inside database dir)
# Output: [perl package name]

if [ $# -eq 0 ] ; then
    echo "Usage: $0 [path to db dir]"
    exit 1
fi

echo $#
while [ $# -gt 0 ] ; do
    dbdir=$1
    shift
    find "$dbdir" -name 'desc' | xargs awk '
BEGIN { RS = ""; FS = "\n" }
$1 == "%NAME%" && $2 ~ /^perl-/ { print $2 }
'
done
